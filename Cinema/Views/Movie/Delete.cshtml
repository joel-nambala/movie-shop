@model Movie

@{
    ViewData["Title"] = "Delete movie";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="container mt-3">
        <h2 class="text-primary mb-2">Delete movie</h2>
        <div class="mb-2">
            <label asp-for="Name" class="mb-1"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter movie name" disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Description" class="mb-1"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Type movie description here..." disabled></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="ImageUrl" class="mb-1"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL" disabled />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="StartDate" class="mb-1"></label>
            <input asp-for="StartDate" class="form-control" disabled />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="EndDate" class="mb-1"></label>
            <input asp-for="EndDate" class="form-control" disabled />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="btn-group mt-4" role="group">
            <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash-fill"></i>&nbsp;Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>